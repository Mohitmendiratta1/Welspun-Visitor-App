<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Department Filter Spinner -->
    <Spinner
        android:id="@+id/departmentSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/departmentSpinner"
        android:layout_marginTop="16dp"/>

    <!-- TableLayout for Employee Data -->
    <TableLayout
        android:id="@+id/employeeTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitButton"
        android:layout_marginTop="16dp"
        android:stretchColumns="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Table Row for Table Header -->
        <TableRow
            android:background="#2196F3"> <!-- Blue background for the header -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/> <!-- White text color for contrast -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Code"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
